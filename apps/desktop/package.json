{
  "name": "@forgetfunds/desktop",
  "version": "1.0.0",
  "description": "ForgetFunds Desktop Application",
  "main": "out/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:electron": "npm run build && electron-builder --publish=always",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "generate-icons": "node scripts/generate-icons.js",
    "build:mas": "npm run build && electron-builder --mac mas",
    "build:mas-dev": "npm run build && electron-builder --mac mas-dev",
    "build:unsigned": "node scripts/build-unsigned.js",
    "setup-codesigning": "node scripts/setup-codesigning.js",
    "clean": "rm -rf dist out node_modules/.cache"
  },
  "build": {
    "appId": "com.forgetfunds.app",
    "productName": "ForgetFunds",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "angelogirardi",
      "repo": "local_first_budget_app"
    },
    "icon": "icons/1024x1024.png",
    "files": [
      "out/**/*",
      "icons/1024x1024.png",
      "icons/32x32.png",
      "!**/*.map",
      "!**/*.md",
      "!**/.DS_Store",
      "!**/README*",
      "!**/CHANGELOG*",
      "!**/LICENSE*",
      "!**/.git*",
      "!**/test/**",
      "!**/tests/**",
      "!**/__tests__/**",
      "!**/spec/**",
      "!**/docs/**",
      "!**/examples/**",
      "!**/demo/**"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/keytar/**/*"
    ],
    "includeSubNodeModules": true,
    "compression": "maximum",
    "mac": {
      "icon": "icons/1024x1024.png",
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "type": "development",
      "minimumSystemVersion": "10.15.0"
    },
    "mas": {
      "category": "public.app-category.finance",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "hardenedRuntime": false,
      "type": "distribution",
      "binaries": [
        "node_modules/better-sqlite3/build/Release/better_sqlite3.node"
      ]
    },
    "win": {
      "icon": "icons/1024x1024.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "ForgetFunds"
    },
    "linux": {
      "icon": "icons/1024x1024.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "title": "ForgetFunds ${version}",
      "icon": "icons/1024x1024.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [
    "budget",
    "finance",
    "electron",
    "local-first",
    "ai-powered"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/keytar": "^4.4.2",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^29.1.4",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "html2canvas": "^1.4.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "puppeteer": "^24.22.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "@forgetfunds/business-logic": "workspace:*",
    "@forgetfunds/data-layer": "workspace:*",
    "@forgetfunds/shared-types": "workspace:*",
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@types/crypto-js": "^4.2.2",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.2.0",
    "keytar": "^7.9.0",
    "lucide-react": "^0.363.0",
    "react": "^18.2.0",
    "react-dom": "^19.1.1",
    "recharts": "^2.12.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^5.1.1",
    "update-electron-app": "^3.0.0",
    "zustand": "^5.0.8"
  }
}
